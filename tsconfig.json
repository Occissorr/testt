{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "types": ["jest", "node"],
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
        "@components/*": ["src/components/*"]
        }
    },
    "include": ["src/**/*", "tsconfig.json"],
    "exclude": ["node_modules", "dist"]
}
  